                    android:button="@drawable/hatchbutton"
                    android:text="ToggleButton" />

                <ToggleButton
                    android:id="@+id/B_L_H_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hatchbutton"
                    android:button="@drawable/hatchbutton"
                    android:text="ToggleButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/T_L_C_1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/cargobutton"
                    android:button="@drawable/cargobutton"
                    android:text="ToggleButton" />

                <ToggleButton
                    android:id="@+id/M_L_C_1"
