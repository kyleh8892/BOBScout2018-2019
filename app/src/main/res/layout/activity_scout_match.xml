                    android:button="@drawable/cargobutton"
                    android:text="ToggleButton" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <ToggleButton
                    android:id="@+id/C_R_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cargobutton"
                    android:button="@drawable/cargobutton"
                    android:text="ToggleButton" />

